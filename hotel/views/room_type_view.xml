<odoo>
    <record id="room_type_view_form" model="ir.ui.view">
        <field name="name">room.type.view.form</field>
        <field name="model">room.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="capacity" />
                        <field name="ac" />
                        <field name="price" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="room_type_view_list" model="ir.ui.view">
        <field name="name">room.type.view.list</field>
        <field name="model">room.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="capacity" />
                <field name="ac" />
                <field name="price" />
            </list>
        </field>
    </record>

    <record id="room_type_action" model="ir.actions.act_window">
        <field name="name">Room Type</field>
        <field name="res_model">room.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <menuitem
        id="room_type_menu"
        name="Room Type"
        action="room_type_action"
        sequence="1" /> -->

</odoo>