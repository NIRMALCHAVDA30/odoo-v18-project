<odoo>
    <record id="hotel_amenities_view_form" model="ir.ui.view">
        <field name="name">hotel.amenities.view.form</field>
        <field name="model">hotel.amenities</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="amenities_type" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hotel_amenities_view_list" model="ir.ui.view">
        <field name="name">hotel.amenities.view.list</field>
        <field name="model">hotel.amenities</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="amenities_type" />
                <field name="description" />
            </list>
        </field>
    </record>

    <record id="hotel_amenities_action" model="ir.actions.act_window">
        <field name="name">Hotel Amenities</field>
        <field name="res_model">hotel.amenities</field>
        <field name="view_mode">list,form</field>

    </record>

    <!-- <menuitem
        id="hotel_amenities_menu"
        name="Hotel Amenities"
        action="hotel_amenities_action"
        sequence="1" /> -->

</odoo>