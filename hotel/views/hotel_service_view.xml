<odoo>
    <record id="hotel_service_view_form" model="ir.ui.view">
        <field name="name">hotel.service.view.form</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="lunch_service" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hotel_service_view_list" model="ir.ui.view">
        <field name="name">hotel.service.view.list</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="description" />
                <field name="lunch_service" />
            </list>
        </field>
    </record>

    <record id="hotel_service_action" model="ir.actions.act_window">
        <field name="name">Hotel Service</field>
        <field name="res_model">hotel.service</field>
        <field name="view_mode">list,form</field>

    </record>

    <!-- <menuitem
        id="hotel_service_menu"
        name="Hotel Service"
        action="hotel_service_action"
        sequence="1" /> -->

</odoo>