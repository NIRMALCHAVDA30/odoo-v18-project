<odoo>
    <record id="housekeeping_checklist_view_form" model="ir.ui.view">
        <field name="name">housekeeping.checklist.view.form</field>
        <field name="model">housekeeping.checklist</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="housekeeping_checklist_view_list" model="ir.ui.view">
        <field name="name">housekeeping.checklist.view.list</field>
        <field name="model">housekeeping.checklist</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="name" />
            </list>
        </field>
    </record>


    <record id="housekeeping_checklist_action" model="ir.actions.act_window">
        <field name="name">Housekeeping Checklist</field>
        <field name="res_model">housekeeping.checklist</field>
        <field name="view_mode">list</field>
    </record>

    <!-- <menuitem
        id="housekeeping_checklist_menu"
        name="Housekeeping Checklist"
        action="housekeeping_checklist_action"
        sequence="1" /> -->

</odoo>