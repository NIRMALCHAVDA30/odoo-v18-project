<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="courier_tag_view_form" model="ir.ui.view">
        <field name="name">courier.tag.view.form</field>
        <field name="model">courier.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <!-- <field name="color" /> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="courier_tag_view_list" model="ir.ui.view">
        <field name="name">courier.tag.view.list</field>
        <field name="model">courier.tag</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <!-- <field name="color" /> -->
            </list>
        </field>
    </record>

    <record id="courier_tag_action" model="ir.actions.act_window">
        <field name="name">Courier Tag</field>
        <field name="res_model">courier.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <menuitem
        id="courier_tag_menu"
        name="Tags"
        action="courier_tag_action"
        sequence="3" /> -->

</odoo>