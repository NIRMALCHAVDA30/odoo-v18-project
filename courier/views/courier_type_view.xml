<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="courier_type_view_form" model="ir.ui.view">
        <field name="name">courier.type.view.form</field>
        <field name="model">courier.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="courier_type_view_list" model="ir.ui.view">
        <field name="name">courier.type.view.list</field>
        <field name="model">courier.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="courier_type_action" model="ir.actions.act_window">
        <field name="name">Courier Type</field>
        <field name="res_model">courier.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <menuitem
        id="courier_type_menu"
        name="Types"
        action="courier_type_action"
        sequence="3" /> -->

</odoo>