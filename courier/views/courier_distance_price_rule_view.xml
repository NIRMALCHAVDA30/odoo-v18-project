<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="courier_distance_price_rule_view_form" model="ir.ui.view">
        <field name="name">courier.distance.price.rule.view.form</field>
        <field name="model">courier.distance.price.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <h2>
                            <field name="name" />
                        </h2>
                        <field name="minimum_distance" />
                        <field name="maximum_distance" />
                        <field name="price" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="courier_distance_price_rule_view_list" model="ir.ui.view">
        <field name="name">courier.distance.price.rule.view.list</field>
        <field name="model">courier.distance.price.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="minimum_distance" />
                <field name="maximum_distance" />
                <field name="price" />
            </list>
        </field>
    </record>

    <record id="courier_distance_price_rule_action" model="ir.actions.act_window">
        <field name="name">Courier Distance Price Rule</field>
        <field name="res_model">courier.distance.price.rule</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <menuitem
        id="courier_distance_price_rule_menu"
        name="Distance Price Rules"
        action="courier_distance_price_rule_action"
        sequence="3" /> -->

</odoo>