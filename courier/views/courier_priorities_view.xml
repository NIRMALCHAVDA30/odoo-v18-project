<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="courier_priorities_view_form" model="ir.ui.view">
        <field name="name">courier.priorities.view.form</field>
        <field name="model">courier.priorities</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="charges" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="courier_priorities_view_list" model="ir.ui.view">
        <field name="name">courier.priorities.view.list</field>
        <field name="model">courier.priorities</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="charges" />
            </list>
        </field>
    </record>

    <record id="courier_priorities_action" model="ir.actions.act_window">
        <field name="name">Courier Priorities</field>
        <field name="res_model">courier.priorities</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <menuitem
        id="courier_priorities_menu"
        name="Priorities"
        action="courier_priorities_action"
        sequence="3" /> -->

</odoo>