<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shipping_mode_form_view_id" model="ir.ui.view">
        <field name="name">Shipping Mode</field>
        <field name="model">shipping.mode</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="speed_rank" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="shipping_mode_list_view_id" model="ir.ui.view">
        <field name="name">Shipping Mode</field>
        <field name="model">shipping.mode</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="speed_rank" />
            </list>
        </field>
    </record>
    <record id="shipping_mode_action_id" model="ir.actions.act_window">
        <field name="name">Shipping Mode</field>
        <field name="res_model">shipping.mode</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>